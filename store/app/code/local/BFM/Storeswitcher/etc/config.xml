<?xml version="1.0"?>
<config>
    <modules>
        <BFM_Storeswitcher>
            <version>0.1.0</version>
        </BFM_Storeswitcher>
    </modules>
    <frontend>
        <layout>
            <updates>
                <storeswitcher>
                    <file>bfm_storeswitcher.xml</file>
                </storeswitcher>
            </updates>
        </layout>
    </frontend>
    <global>
        <blocks>
            <storeswitcher>
                <class>BFM_Storeswitcher_Block</class>
            </storeswitcher>
        </blocks>
        <models>
            <storeswitcher>
                <class>BFM_Storeswitcher_Model</class>
            </storeswitcher>
        </models>
        <helpers>
            <storeswitcher>
                <class>BFM_Storeswitcher_Helper</class>
            </storeswitcher>
        </helpers>
        <events>
        	<controller_front_init_before>
        		<observers>
        			<storeswitcher>
        				<class>BFM_Storeswitcher_Model_Observer</class>
                        <method>setCurrency</method>
        			</storeswitcher>
        		</observers>
        	</controller_front_init_before>
        </events>
    </global>
</config>