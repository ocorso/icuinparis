/**
 * Category layered navigation
 *
 * @see Mage_Catalog_Block_Layer_View
 */
$cat = Mage::registry('current_category');
if($cat) $title = $cat->getName();
else $title = 'Category';
?>
<?php if($this->canShowBlock()): ?>
<?php echo $this->getStateHtml() ?>

<?php if($this->hasIndianMenu()) echo $this->getIndianMenu(); ?>


        <?php if($this->canShowOptions()): ?>
                <?php $_filters = $this->getFilters();
                $show = false; 
                foreach ($_filters as $_filter) if($_filter->getItemsCount()) $show = true;
                $i = 4;
                if($show) : ?>


<ul style="margin:20px 0 0 0" id="menu">
		<li>REFINE: <span style="position:relative; color:#e5a64b;"><?php echo strtoupper($title); ?></span></li>
                <?php foreach ($_filters as $_filter): $i++; ?>
                <?php if($_filter->getItemsCount()): ?>

		<li><a onclick="swaparrow('arrow<?php echo $i; ?>')" href="#">
   				<img height="9" width="9" name="arrow<?php echo $i ?>" id="arrow<?php echo $i ?>" src="<?php echo $this->getSkinUrl('images/right-arrow.jpg'); ?>"><?php echo $this->__($_filter->getName()) ?></a>
				<?php echo $_filter->getHtml(); ?>
		</li>
                <?php endif; ?>
                <?php endforeach; ?>
</ul>
        <?php endif; ?>
	<?php endif; ?>
<?php endif; ?>
