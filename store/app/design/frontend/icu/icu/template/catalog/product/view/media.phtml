/**
 * Product media data template
 *
 * @see Mage_Catalog_Block_Product_View_Media
 */
?>

<?php
    $_product = $this->getProduct();
    $_helper = $this->helper('catalog/output');
?>

<table id="media_table" border="0" cellspacing="0" cellpadding="0">
<tr>
	<td>
	<div id="product_bigimg">

		<a 	href="<?= $_product->getImageUrl(); ?>" 
			class="jqzoom"
			rel="product-gallery">
			<img id="image_big" src="<?= $this->helper('catalog/image')->init($_product, 'image')->resize(350, 525); ?>" alt="" />
		</a>			
	</div>
	</td>
	<td>
		<ul id="thumblist">
			<?php if (count($this->getGalleryImages()) > 0): ?>
				<?php foreach ($this->getGalleryImages() as $_image): ?>
				  <li><a href="javascript:void(0);" class="" 
				  				  rel="{gallery:'product-gallery',smallimage:'<?= $this->helper('catalog/image')->init($this->getProduct(), 'thumbnail', $_image->getFile())->resize(350,525); ?>',largeimage:'<?= $this->helper('catalog/image')->init($this->getProduct(), '', $_image->getFile()); ?>'}"
				  				  >
				  				  	<img 
				  				
				  				  	src="<?= $this->helper('catalog/image')->init($this->getProduct(), 'thumbnail', $_image->getFile())->resize(75,125); ?>" 
				  				  	alt="Product Thumbnail" />
				  				  </a></li>
				<?php endforeach; ?>
			<?php endif; ?>
		</ul>
	</td>
</tr>
</table>
